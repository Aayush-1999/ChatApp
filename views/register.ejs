<%include ./partials/header%>

<div class="container p-4">
    <div class="row justify-content-center">
        <div class="col-0 col-md-2 col-lg-3"></div>
        <div class="col-12 col-md-8 col-lg-5">
            <div class="card border-dark mb-3 mx-auto form-card">
                <div class="card-header">Sign up</div>
                <div class="card-body text-dark">
                    <form action="/signup" method="post">
                        <div class="form-group">
                            <label for="username">User Name</label>
                            <input type="text" id="username" name="username" class="form-control" placeholder="User Name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" to="password" class="form-control" name="password" placeholder="Password">
                        </div>
                        <button class="btn btn-block btn-primary">SIGN UP</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-0 col-md-2 col-lg-3"></div>
    </div>
</div>

<%include ./partials/footer%>